@model DiscrepanciaModel

@{
    ViewData["Title"] = "Discrepâncias de Arquivos";
}

<div class="bodylayout-discrepancias">
    <div class="content-container-discrepancias">
        <h2 class="text-center mb-4">QUANTIDADES DE DISCREPÂNCIAS</h2>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center">
                @ViewBag.ErrorMessage
            </div>
        }

        <div id="quantidadeDiscrepancias" class="text-center">
            <p class="discrepancia-item">
                <strong>Servidor:</strong> @Model.Servidor linhas
                @if (Model.Servidor > 0)
                {
                    <a href="@Url.Action("BaixarArquivo", "Fluxo", new { nome = "SERVIDOR.txt" })" class="btn btn-sm btn-outline-secondary ms-2">Baixar</a>
                }
            </p>
            <p class="discrepancia-item">
                <strong>Matrícula:</strong> @Model.Matricula linhas
                @if (Model.Matricula > 0)
                {
                    <a href="@Url.Action("BaixarArquivo", "Fluxo", new { nome = "MATRICULA.txt" })" class="btn btn-sm btn-outline-secondary ms-2">Baixar</a>
                }
            </p>
            <p class="discrepancia-item">
                <strong>Categoria:</strong> @Model.Categoria linhas
                @if (Model.Categoria > 0)
                {
                    <a href="@Url.Action("BaixarArquivo", "Fluxo", new { nome = "CATEGORIA.txt" })" class="btn btn-sm btn-outline-secondary ms-2">Baixar</a>
                }
            </p>
            <p class="discrepancia-item">
                <strong>Secretarias:</strong> @Model.Secretaria linhas
                @if (Model.Secretaria > 0)
                {
                    <a href="@Url.Action("BaixarArquivo", "Fluxo", new { nome = "SECRETARIA.txt" })" class="btn btn-sm btn-outline-secondary ms-2">Baixar</a>
                }
            </p>
            <p class="discrepancia-item">
                <strong>Perfil de Cálculo:</strong> @Model.PerfilCalculo linhas
                @if (Model.PerfilCalculo > 0)
                {
                    <a href="@Url.Action("BaixarArquivo", "Fluxo", new { nome = "PERFIL DE CALCULO.txt" })" class="btn btn-sm btn-outline-secondary ms-2">Baixar</a>
                }
            </p>
        </div>

        <div class="text-center mt-4">
            <form method="post" action="@Url.Action("Finalizar", "Fluxo")">
                <button type="submit" class="btn btn-primary">
                    FINALIZAR
                </button>
            </form>
        </div>

    </div>
</div>

<style>
    body {
        background: linear-gradient(to bottom, #0d6efd, #000); /* azul para preto */
    }
    /* Fundo principal */
    .bodylayout-discrepancias {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
        background: linear-gradient(135deg, #f0f4f8, #d9e2ec);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        border-radius: 15px;
        padding: 20px;
    }

    /* Container */
    .content-container-discrepancias {
        width: 70%;
        background: #fff;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    /* Título */
    h2 {
        font-weight: bold;
        color: #333;
        font-size: 2rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Mensagem de erro */
    .alert {
        font-size: 1.1rem;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 10px;
    }

    /* Discrepâncias */
    #quantidadeDiscrepancias {
        margin-top: 30px;
    }

    .discrepancia-item {
        font-size: 1.2rem;
        color: #333;
        margin: 10px 0;
    }

    .discrepancia-item strong {
        color: #2575fc;
        font-weight: bold;
    }

    /* Botão */
    .btn-gradient {
        background: linear-gradient(90deg, #2575fc, #6a11cb);
        color: white;
        border: none;
        padding: 12px 30px;
        font-size: 1rem;
        font-weight: bold;
        border-radius: 12px;
        transition: all 0.4s ease;
    }

    .btn-gradient:hover {
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        box-shadow: 0 4px 12px rgba(106, 17, 203, 0.4);
    }
</style>
